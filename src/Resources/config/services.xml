<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autoconfigure="true" autowire="true" public="false"/>

        <service id="esoftsk.sql_mig.service.migration_builder" class="EsoftSk\SqlMigBundle\Service\MigrationBuilder"/>

        <service id="esoftsk.sql_mig.service.database_migration" class="EsoftSk\SqlMigBundle\Service\DatabaseMigration">
            <argument type="service" id="esoftsk.sql_mig.service.migration_builder" index="2"/>
        </service>

        <service id="esoftsk.sql_mig.command.apply" class="EsoftSk\SqlMigBundle\Command\ApplyCommand" public="true">
            <tag name="console.command" />
            <argument type="service" id="esoftsk.sql_mig.service.database_migration"/>
        </service>

    </services>
</container>